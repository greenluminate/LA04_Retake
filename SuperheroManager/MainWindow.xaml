<Window x:Class="SuperheroManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperheroManager"
        xmlns:vms="clr-namespace:SuperheroManager.ViewModels"
        xmlns:helpers="clr-namespace:SuperheroManager.Helpers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vms:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <helpers:EnumToColorConverter x:Key="enumtocolor"/>
        <helpers:NumberToColorConverter x:Key="numtocolor"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" HorizontalContentAlignment="Stretch" ItemsSource="{Binding SuperheroesInHQ}" SelectedItem="{Binding SelectedFromHQ}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="2">
                        <Grid Background="{Binding Side, Converter={StaticResource enumtocolor }}">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{Binding Name}" ContentStringFormat="Name: {0}" Grid.Row="0" Grid.Column="0"/>
                            <Label Content="{Binding Power}" ContentStringFormat="Power: {0}" Grid.Row="1" Grid.Column="0"/>
                            <Label Content="{Binding Speed}" ContentStringFormat="Speed: {0}" Grid.Row="1" Grid.Column="1"/>
                            <ProgressBar Maximum="10" Grid.Row="2" Grid.Column="0" Margin="10" Height="10" Value="{Binding Power}" Foreground="{Binding Power, Converter={StaticResource numtocolor}}"/>
                            <ProgressBar Maximum="10" Grid.Row="2" Grid.Column="1" Margin="10" Height="10" Value="{Binding Speed}" Foreground="{Binding Speed, Converter={StaticResource numtocolor}}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Label Content="0" ContentStringFormat="Cost: {0}$" HorizontalAlignment="Center"/>
            <Button Content="Add to battle" Margin="10" Padding="10" Command="{Binding AddToBattle}"/>
            <Button Content="Remove from battle" Margin="10" Padding="10" Command="{Binding RemoveFromBattle}"/>
            <Button Content="Create a superhero" Margin="10" Padding="10" Command="{Binding CreateSuperhero}"/>
            <Button Content="Edit a superhero" Margin="10" Padding="10" Command="{Binding EditSuperhero}"/>
            <Label Content="{Binding AVGPower}" ContentStringFormat="Average Power: {0}" HorizontalAlignment="Center"/>
            <ProgressBar Maximum="10" Margin="10" Height="10" Value="{Binding AVGPower, Mode=OneWay}" Foreground="{Binding AVGPower, Converter={StaticResource numtocolor}}"/>
            <Label Content="{Binding AVGSpeed}" ContentStringFormat="Average Speed: {0}" HorizontalAlignment="Center"/>
            <ProgressBar Maximum="10" Margin="10" Height="10" Value="{Binding AVGSpeed, Mode=OneWay}" Foreground="{Binding AVGSpeed, Converter={StaticResource numtocolor}}"/>

        </StackPanel>
        <ListBox Grid.Column="2" ItemsSource="{Binding SuperheroesInBattle}" HorizontalContentAlignment="Stretch" SelectedItem="{Binding SelectedFromBattle}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="2">
                        <StackPanel Orientation="Horizontal" Background="{Binding Side, Converter={StaticResource enumtocolor}}">
                            <Label Content="{Binding Name}" ContentStringFormat="Name: {0}"/>
                            <Label Content="{Binding Power}" ContentStringFormat="Power: {0}"/>
                            <Label Content="{Binding Speed}" ContentStringFormat="Speed: {0}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
